<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<!-- TestNG suite definition for parallel test execution -->

<suite name="AlertConfirmPromptSuite" parallel="tests" thread-count="2">
    
    <!-- First test case execution on Chrome browser -->
    <test name="AlertConfirmPromptSuiteTests">
        <parameter name="browserName" value="chrome"/>
        <classes>
            <!-- Specifies the test class to run -->
            <class name="com.TestingScenario.AlertPromptConfirm"/>
        </classes>
    </test>

    <!-- Second test case execution on Edge browser -->
    <test name="AlertConfirmPromptSuiteTests2">
        <parameter name="browserName" value="edge"/>
        <classes>
            <!-- Reuses the same test class with a different browser configuration -->
            <class name="com.TestingScenario.AlertPromptConfirm"/>
        </classes>
    </test>

</suite>
